<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="10dp"
    android:layoutDirection="rtl"
    android:fitsSystemWindows="true"
    tools:context="com.rezaee_learn.android.sabtparvaz.SecondActivity">

 <EditText
     android:id="@+id/etx_activitySecond_name"
     android:layout_width="match_parent"
     android:layout_height="50dp"
     android:hint="نام و نام خانوادگی"/>
    <EditText
        android:id="@+id/etxt_activitySecond_codeMelli"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="کد ملی "/>
    <EditText
        android:id="@+id/etx_activitySecond_telephone"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="شماره تلفن"/>
    <TextView
        android:id="@+id/txt_activitySecond_codeParvaz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="کد پرواز"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:text="ثبت بلیط"
        android:onClick="btn_sabtBleit_onClick"/>
</LinearLayout>
